    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next Train",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/next_train.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        },

        {
            "name": "Generate Matplotlib",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/inputs/generate_plots/generate_matplotlib.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "--num-images", "100",
                // "--no-antialiasing",
                "--scatter",
                "mpl-generated-scatter",
                // "--debug",
            ],
        },

        {
            "name": "Generate OpenCV",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/inputs/generate_plots/generate_opencv.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                // "--debug",
                "--num-drawings", "5000",
                "--num-images-per-drawing", "1",
                "--background-dir", "/home/nb/Perso/imagenet/imagenette2",
                "opencv-generated-background"
            ],
        },

        {
            "name": "Evaluate",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/dlcharts/evaluation/similar_colors.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "--batch",
                "--model", "regression_unetres_v3_scripted.pt",
                // "--baseline",
                "--easy",
                // "--image", "inputs/opencv-generated/drawings-test/img-00001-000.rendered.png",
            ],
        },

        {
            "name": "Export ONNX",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/scripts/export_to_torchscript.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/charts/logs/v4_uresnet18-v1-residual_mse_bn32_5e-3/default/checkpoint-00209.pt",
                "output.scripted.pt"
            ],
        },
    ]
}