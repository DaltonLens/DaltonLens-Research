{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CVLog Client",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/dlcharts/common/cvlog.py",
            "console": "integratedTerminal",
            "args": ["--client"],
        },

        {
            "name": "CVLog Server",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/dlcharts/common/cvlog.py",
            "console": "integratedTerminal",
            "args": ["--server"],
        },
        
        {
            "name": "Next Train",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/next_train.py",
            "console": "integratedTerminal"
        },

        {
            "name": "Generate Matplotlib",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/charts",
            "program": "${workspaceFolder}/charts/inputs/generate_plots/generate_matplotlib.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "--num-images", "100",
                "mpl_generated"
            ],
        },

        {
            "name": "Train Regression",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/charts/scripts/train_regression.py",
            "cwd": "${workspaceFolder}/charts",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "xp6",
                "--decoder_lr",
                "1e-3",
                "--encoder_lr",
                "1e-5",
                "--batch_size",
                "64",
                //"--overfit", "2",
                "--epochs_decoder_only",
                "2",
                "--epochs_finetune",
                "2",
                //"--validate"
            ]
        }
    ]
}